<h1>Listing Boat Document Types</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Notes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @boat_document_types.each do |boat_document_type| %>
      <tr>
        <td><%= boat_document_type.name %></td>
        <td><%= boat_document_type.description %></td>
        <td><%= boat_document_type.notes %></td>
        <td><%= link_to 'Show', boat_document_type %></td>
        <td><%= link_to 'Edit', edit_boat_document_type_path(boat_document_type) %></td>
        <td><%= link_to 'Destroy', boat_document_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

