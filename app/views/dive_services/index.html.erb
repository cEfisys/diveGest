<h1>Listing Dive Services</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Notes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @dive_services.each do |dive_service| %>
      <tr>
        <td><%= dive_service.date %></td>
        <td><%= dive_service.notes %></td>
        <td><%= link_to 'Show', dive_service %></td>
        <td><%= link_to 'Edit', edit_dive_service_path(dive_service) %></td>
        <td><%= link_to 'Destroy', dive_service, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

